@using System.Security.Principal

    <ul class="navbar-nav">
        @if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <button type="button" class="nav-link btnTransparent" data-toggle="modal" data-target="#myModal" title="Ejecutar proceso">
                    <h2><i class="fas fa-cogs" style="color:#002C58;"></i></h2>
                </button>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="AzureAD" title="Cerrar sesion" asp-controller="Account" asp-action="SignOut">
                    <h2><i class="fas fa-arrow-alt-circle-right" style="color:#002C58;"></i></h2>
                </a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">Iniciar sesion</a>
            </li>
        }
    </ul>

<div id="myModal" class="modal fade" role="dialog">
    <partial name="_Executor" />
</div>