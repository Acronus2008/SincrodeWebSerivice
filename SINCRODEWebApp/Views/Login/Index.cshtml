@model SINCRODEWebApp.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar sesion</title>

    <link rel="stylesheet" type="text/css" href="~/lib/login/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/login/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/lib/login/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/login/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/lib/login/css/main.css">

    <script src="~/lib/login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/lib/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/lib/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/login/vendor/select2/select2.min.js"></script>
    <script src="~/lib/login/js/main.js"></script>

    <style>
        .container-login1001 {
          width: 100%;  
          min-height: 100vh;
          display: -webkit-box;
          display: -webkit-flex;
          display: -moz-box;
          display: -ms-flexbox;
          display: flex;
          flex-wrap: wrap;
          justify-content: center;
          align-items: center;
          padding: 15px;
          background: #0250c5;
          background: -webkit-linear-gradient(bottom, #0250c5, #517fb173);
          background: -o-linear-gradient(bottom, #0250c5, #517fb173);
          background: -moz-linear-gradient(bottom, #0250c5, #517fb173);
          background: linear-gradient(bottom, #0250c5, #517fb173);
          position: relative;
          z-index: 1;
        }

        .container-login100::before {
          content: "";
          display: block;
          position: absolute;
          z-index: -1;
          width: 100%;
          height: 100%;
          top: 0;
          left: 0;
        }

        .wrap-login100 {
          width: 450px;
          background: #fff;
          border-radius: 3px;
          overflow: hidden;
        }

        .container-login1001-form-btn {
          width: 100%;
          display: -webkit-box;
          display: -webkit-flex;
          display: -moz-box;
          display: -ms-flexbox;
          display: flex;
          flex-wrap: wrap;
          justify-content: center;
        }

        .login1001-form-btn {
            font-family: Raleway-Bold;
            font-size: 16px;
            line-height: 1.5;
            color: #fff;
            text-transform: uppercase;
            width: 100%;
            height: 62px;
            border-radius: 3px;
            background: #004085;
            display: -webkit-box;
            display: -webkit-flex;
            display: -moz-box;
            display: -ms-flexbox;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0 25px;
            -webkit-transition: all 0.4s;
            -o-transition: all 0.4s;
            -moz-transition: all 0.4s;
            transition: all 0.4s;
        }

        .login1001-form-btn:hover {
          background: #333333;
        }
    </style>
</head>
<body>
    <div class="limiter">
        <div class="container-login1001">
            <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
                <form class="login100-form validate-form" asp-action="DoLogin" asp-controller="Login">
                    <span class="login100-form-title p-b-55">
                        <img src="~/logo_sacyr.jpg" alt="SACYR" style="height:50px; width: 150px" />
                    </span>

                    <div class="wrap-input100 validate-input m-b-16">
                        <input asp-for="Username" class="input100" placeholder="Usuario"/>
                        <span class="symbol-input100">
                            <span class="lnr lnr-users"></span>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input m-b-16">
                        <input asp-for="Password" type="password" class="input100" placeholder="Contraseña"/>
                        <span class="symbol-input100">
                            <span class="lnr lnr-lock"></span>
                        </span>
                    </div>

                    <div class="container-login100-form-btn p-t-25">
                        <button class="login1001-form-btn">
                            Iniciar sesión
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
