@model int

@{
    ViewData["Title"] = "Logs";
}

@section styles {

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" />

}

<a class="text-primary" title="Procesos" asp-controller="Process" asp-action="Index">
    <h4><i class="fas fa-arrow-alt-circle-left text-primary"></i>&nbsp;Regresar</h4>
</a>

<h1 style="color:#002C58;">
    <i class="fas fa-database"></i>
    Logs del proceso @ViewData["ProccessId"]
</h1>
<hr style="color:#00AFD2; background-color:#00AFD2;" />
<table class="table table-striped table-bordered" width="100%" id="logsTable">
    <thead>
        <tr>
            <th>
                Nombre y apellidos
            </th>
            <th>
                Inicio
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Errores
            </th>
        </tr>
    </thead>
</table>


@section scripts {
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script>
        (function ($) {
            var generateCustomerTable = $("#logsTable")
                .dataTable({
                    "processing": true,
                    "serverSide": true,
                    "ajax": {
                        "url": "/api/apiLogs/?id=" + @ViewData["ProccessId"],
                        "method": "POST"
                    },
                    "columns": [
                        { "data": "employed" },
                        { "data": "fechaInicioPro" },
                        { "data": "descProlog" },
                        { "data": "excProlog" }
                    ],
                    "language": {
                        "lengthMenu": "Cantidad de registros _MENU_ por página",
                        "zeroRecords": "No existen procesos",
                        "info": "Mostrando página _PAGE_ de _PAGES_",
                        "infoEmpty": "No existen resultados disponibles",
                        "infoFiltered": "(filtered from _MAX_ total records)",
                        "search": "Buscar:",
                        "processing": "Obteniendo listado de procesos",
                        "searchPlaceholder": "Buscar procesos",
                        "paginate": {
                            "first": "Inicio",
                            "last": "Ultimo",
                            "next": "Próximo",
                            "previous": "Anterior"
                        }
                    },
                    "ordering": true,
                    "paging": true,
                    "pagingType": "full_numbers",
                    "pageLength": 10
                });
        })(jQuery);
    </script>
}

